<VBox prefHeight="650.0" prefWidth="760.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReviewsWindowController">
    <children>
        <MenuBar fx:id="menuBar" prefHeight="29.0" prefWidth="200.0">
            <menus>
                <Menu fx:id="menuActions" mnemonicParsing="false" text="Actions">
                    <items>
                        <MenuItem fx:id="menuItemReport" mnemonicParsing="false" text="Report" />
                    </items>
                </Menu>
                <Menu fx:id="menuHelp" mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem fx:id="menuItemHelp" mnemonicParsing="false" onAction="#handleHelpAction" text="Help" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <StackPane style="-fx-background-color: A7C4E5;">
            <VBox alignment="CENTER" spacing="10">
                <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15;">
                    <Region HBox.hgrow="ALWAYS" />
                    <MenuButton fx:id="menu" mnemonicParsing="false" prefHeight="31.0" prefWidth="168.0">
                        <graphic>
                            <ImageView>
                                <image>
                                    <Image url="@../images/person_23dp_789DE5_FILL0_wght400_GRAD0_opsz24.png" />
                                </image>
                            </ImageView>
                        </graphic>
                        <items>
                            <MenuItem fx:id="miProfile" mnemonicParsing="false" text="PROFILE" />
                            <MenuItem fx:id="miLists" mnemonicParsing="false" text="LISTS" />
                            <MenuItem fx:id="miMainMenu" mnemonicParsing="false" text="MAIN MENU" />
                            <MenuItem fx:id="miLogOut" mnemonicParsing="false" text="LOG OUT" />
                        </items>
                    </MenuButton>
                </HBox>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="REVIEWS" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                </Text>
                <VBox.margin>
                    <Insets bottom="50.0" />
                </VBox.margin>
            </VBox>
        </StackPane>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="searchBar" prefHeight="26.0" prefWidth="566.0" HBox.hgrow="ALWAYS" />
                <Region HBox.hgrow="ALWAYS" />
                <ComboBox fx:id="combLists" prefWidth="150.0" promptText="-- My Lists --" />
            </HBox>
                  
            <TableView fx:id="tableReview" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="tcGame" minWidth="75.3333101272583" prefWidth="102.66665363311768" text="GAME" />
               <TableColumn fx:id="tcAutor" prefWidth="112.00003814697266" text="AUTOR" />
                    <TableColumn fx:id="tcRelease" minWidth="26.666656494140625" prefWidth="89.99998474121094" text="RELEASE" />
                    <TableColumn fx:id="tcPlatform" minWidth="74.6666259765625" prefWidth="78.66668701171875" text="PLATFORM" />
                    <TableColumn fx:id="tcRate" minWidth="0.0" prefWidth="82.6666259765625" text="SCORE" />
                    <TableColumn fx:id="tcReview" minWidth="150.0" prefWidth="344.0" text="REVIEW" />
                </columns>
            </TableView>
                  
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnNewReview" mnemonicParsing="false" onAction="#newReview" prefHeight="26.0" prefWidth="133.0" text="New Review" />
            </HBox>
        </VBox>
    </children>
</VBox>
